# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Front pages and login
GET     /                           @com.storagexchange.controllers.Application.index
GET     /login                      @com.storagexchange.controllers.Application.login
POST    /login                      @com.storagexchange.controllers.Application.authorize
GET     /signup                     @com.storagexchange.controllers.Application.signup
POST    /signup                     @com.storagexchange.controllers.Application.registration
GET     /verify/:token              @com.storagexchange.controllers.Application.verifyEmail(token:String)
# Posting urls
GET     /post                       @com.storagexchange.controllers.PostBoard.newPost
POST    /post                       @com.storagexchange.controllers.PostBoard.postReceive
GET     /myposts                    @com.storagexchange.controllers.PostBoard.postMyRetreive
GET     /postboard                  @com.storagexchange.controllers.PostBoard.postViewAll
GET     /modifypost                 @com.storagexchange.controllers.PostBoard.postModifyInitial
POST    /modifypost                 @com.storagexchange.controllers.PostBoard.postModify
GET     /deletepost                 @com.storagexchange.controllers.PostBoard.postDelete
# Dynamic pages
GET     /profile                    @com.storagexchange.controllers.Dynamic.profile

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
