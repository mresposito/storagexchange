# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @com.storagexchange.controllers.Application.index
GET     /login                      @com.storagexchange.controllers.Application.login
POST    /login                      @com.storagexchange.controllers.Application.authorize
GET     /signup                     @com.storagexchange.controllers.Application.signup
POST    /signup                     @com.storagexchange.controllers.Application.registration
GET     /verify/:token              @com.storagexchange.controllers.Application.verifyEmail(token:String)
GET     /post                       @com.storagexchange.controllers.Application.newPost
POST    /post                       @com.storagexchange.controllers.Application.postReceive
GET     /myposts                    @com.storagexchange.controllers.Application.postMyRetreive
GET     /postboard                  @com.storagexchange.controllers.Application.postViewAll
GET     /modifypost                 @com.storagexchange.controllers.Application.postModifyInitial
POST    /modifyPost                 @com.storagexchange.controllers.Application.postModify

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
