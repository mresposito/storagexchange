# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @com.storagexchange.controllers.Application.index
GET     /login                      @com.storagexchange.controllers.Application.login
GET     /signup                     @com.storagexchange.controllers.Application.signup
POST    /login                      @com.storagexchange.controllers.Application.authorize
POST    /users                      @com.storagexchange.controllers.Application.registration
GET     /confirm/:token             @com.storagexchange.controllers.Application.authenticated(token:String)
GET     /post                       @com.storagexchange.controllers.Application.newPost
POST    /post                       @com.storagexchange.controllers.Application.postReceive
GET     /myposts                    @com.storagexchange.controllers.Application.postMyRetreive

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
